<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Dashboard</title>
</head>

<body class="bg-gray-900 text-gray-200 min-h-screen flex flex-col items-center p-6">
    <!-- Container for the dashboard content -->
    <div class="w-full max-w-4xl bg-gray-800 rounded-lg shadow-lg p-8 mt-8">
        <!-- Header section with a welcome message -->
        <h1 class="text-3xl font-bold text-center mb-8">Welcome to your Dashboard, <span class="text-indigo-400"><%= name %></span></h1>

        <!-- Section for recent expenses -->
        <div>
            <h3 class="text-2xl font-semibold mb-4">Your Recent Expenses</h3>
            <ul class="space-y-4">
                
                <% if (recentExpenses.length == 0) { %>
                    <li>No expense available to display </li>
              <%  } else { %>

                <% recentExpenses.forEach(expense => { %>
                    <li class="bg-gray-700 p-4 rounded-lg shadow-md">
                        <strong class="text-xl"><%= expense.description %></strong>
                        <div class="mt-2">
                            <span class="block text-lg">Amount: <span class="text-red-400">$<%= expense.amount %></span></span>
                            <span class="block text-lg">Category: <%= expense.category %></span>
                        </div>
                    </li>
                <% }) %>

             <% } %>




            </ul> 
        </div>

        <!-- Links for new expenses and logging out and viewing all expenses  -->
        <div class="mt-8 flex justify-between">
            <a href="/expenses/new" class="text-indigo-400 hover:text-indigo-500">Add New Expense</a>

                <a href="/expenses/all" class="text-green-600 hover:text-green-800">View all Expenses</a>

            <form action="/logout" method="POST">
                <button type="submit" class="text-red-400 hover:text-red-500 focus:outline-none">
                    Logout
                </button>
            </form>
        </div>
    </div>
</body>

</html>
